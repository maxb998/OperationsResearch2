{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type":"cppdbg",
            "name": "Debug",
            "preLaunchTask": "Build Debug",
            "request": "launch",
            "program": "${workspaceFolder}/bin/debug/main",
            "args": [
                "--file", "data/att48.tsp",
                "--mode", "blenders",

                "--grasp", "random(0.01)",
                "--2opt",
                "--tlim", "100",

                "--nnOption", "random",
                "--emOption", "random",
                "--vnsOption", "nn",

                //"--seed", "2023",
                "--threads", "1",
                "--roundcosts",
                "--plot", 
                //"--save",
                "--loglvl", "all"
            ],
            "cwd": "${workspaceFolder}"
       },
       {
            "type":"cppdbg",
            "name": "Exec",
            "preLaunchTask": "Build Exec",
            "request": "launch",
            "program": "${workspaceFolder}/bin/x64/main",
            "args": [
                "--file", "data/att48.tsp",
                "--mode", "nn",

                "--grasp", "random(0.01)",
                "--2opt",
                "--tlim", "600",

                "--nnOption", "tryall",
                "--emOption", "random",
                "--vnsOption", "nn",

                //"--seed", "2023",
                "--threads", "4",
                "--roundcosts",
                "--plot", 
                //"--save",
                "--loglvl", "debug"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}