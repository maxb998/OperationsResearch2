    "version": "0.2.0",
    "configurations": [
        {
            "type":"cppdbg",
            "name": "Debug",
            "preLaunchTask": "Build Debug",
            "request": "launch",
            "program": "${workspaceFolder}/bin/debug/main",
            "args": [
                "--file", "data/a280.tsp",
                "--mode", "vns",

                "--grasp", "almostbest[0.02]",
                //"--2opt",
                "--tlim", "10",

                //"--metaheur-init-mode", "em",
