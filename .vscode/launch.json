    "version": "0.2.0",
    "configurations": [
        {
            "type":"cppdbg",
            "name": "Debug",
            "preLaunchTask": "Build Debug",
            "request": "launch",
            "program": "${workspaceFolder}/bin/debug/main",
            "args": [
                "--file", "data/a280.tsp",
                "--mode", "hardfix",

                "--grasp", "random(0.05)",
                "--2opt",
                "--tlim", "100",

                //"--nn-opt", "tryall",
                "--em-opt", "random",

                //"--metaheur-init-mode", "em",
                //"--matheur-init-mode", "vns",
                //"--warm-start-mode", "tabu",

                //"--seed", "2023",
                "--threads", "8",
                "--roundcosts",
                "--plot", 
                //"--save",
                "--loglvl", "debug"
            ],
            "cwd": "${workspaceFolder}"
       },
       {
            "type":"cppdbg",
            "name": "Exec",
            "preLaunchTask": "Build Exec",
            "request": "launch",
            "program": "${workspaceFolder}/bin/x64/main",
            "args": [
                "--file", "data/rl5915.tsp",
                "--mode", "hardfix",

                //"--grasp", "almostbest(0.1)",
                "--2opt",
                "--tlim", "120",

                //"--nn-opt", "tryall",
                "--em-opt", "random",

                //"--metaheur-init-mode", "em",
                //"--matheur-init-mode", "vns",
                //"--warm-start-mode", "tabu",

                "--seed", "102563",
                "--threads", "8",
                "--roundcosts",
                "--plot", 
                //"--save",
                "--loglvl", "debug"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}
