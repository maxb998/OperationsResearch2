    "version": "0.2.0",
    "configurations": [
        {
            "type":"cppdbg",
            "name": "Debug",
            "preLaunchTask": "Build Debug",
            "request": "launch",
            "program": "${workspaceFolder}/bin/debug/main",
            "args": [
                "--file", "data/att48.tsp",
                "--mode", "branch_cut",

                "--grasp", "random(0.05)",
                "--2opt",
                "--tlim", "1000",

                //"--nnOpt", "tryall",
                //"--emOpt", "random",
                //"--vnsOpt", "nn",

                //"--seed", "2023",
                "--threads", "1",
                "--roundcosts",
                "--plot", 
                //"--save",
                "--loglvl", "debug"
            ],
            "cwd": "${workspaceFolder}"
       },
       {
            "type":"cppdbg",
            "name": "Exec",
            "preLaunchTask": "Build Exec",
            "request": "launch",
            "program": "${workspaceFolder}/bin/x64/main",
            "args": [
                "--file", "data/a280.tsp",
                "--mode", "vns",

                "--grasp", "random(0.05)",
                "--2opt",
                "--tlim", "10",

                //"--nnOpt", "tryall",
                //"--emOpt", "random",
                //"--vnsOpt", "nn",

                //"--seed", "2023",
                //"--threads", "4",
                //"--roundcosts",
                "--plot", 
                //"--save",
                "--loglvl", "log"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}
