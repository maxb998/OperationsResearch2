    "version": "0.2.0",
    "configurations": [
        {
            "type":"cppdbg",
            "name": "Debug",
            "preLaunchTask": "Build Debug",
            "request": "launch",
            "program": "${workspaceFolder}/bin/debug/main",
            "args": [
                "--file", "data/a280.tsp",
                "--mode", "local-branching",

                "--grasp", "almostbest(0.1)",
                //"--2opt",
                "--tlim", "120",

                //"--nn-opt", "tryall",
                //"--em-opt", "random",

                //"--metaheur-init-mode", "em",
                "--matheur-init-mode", "em",
                //"--warm-start-mode", "em",

                //"--hardfix-policy", "small",

                "--seed", "2023",
                "--threads", "1",
                "--roundcosts",
                "--plot", 
                //"--save",
                "--loglvl", "log"
            ],
            "cwd": "${workspaceFolder}"
       },
       {
            "type":"cppdbg",
            "name": "Exec",
            "preLaunchTask": "Build Exec",
            "request": "launch",
            "program": "${workspaceFolder}/bin/x64/main",
            "args": [
                "--file", "data/a280.tsp",
                "--mode", "local-branching",

                "--grasp", "almostbest(0.1)",
                "--2opt",
                "--tlim", "500",

                //"--nn-opt", "tryall",
                //"--em-opt", "random",

                "--metaheur-init-mode", "nn",
                "--matheur-init-mode", "vns",
                //"--warm-start-mode", "tabu",

                //"--hardfix-policy", "small",

                //"--seed", "2023",
                //"--threads", "8",
                "--roundcosts",
                "--plot", 
                //"--save",
                "--loglvl", "log"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}
