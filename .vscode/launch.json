    "version": "0.2.0",
    "configurations": [
        {
            "type":"cppdbg",
            "name": "Debug",
            "preLaunchTask": "Build Debug",
            "request": "launch",
            "program": "${workspaceFolder}/bin/debug/main",
            "args": [
                "--file", "data/a280.tsp",
                "--mode", "nn",

                "--grasp", "random(0.05)",
                "--2opt",
                "--tlim", "2",

                //"--nnOpt", "tryall",
                //"--emOpt", "random",
                //"--vnsOpt", "nn",

                //"--seed", "2023",
                "--threads", "4",
                "--roundcosts",
                "--plot", 
                //"--save",
                "--loglvl", "all"
            ],
            "cwd": "${workspaceFolder}"
       },
       {
            "type":"cppdbg",
            "name": "Exec",
            "preLaunchTask": "Build Exec",
            "request": "launch",
            "program": "${workspaceFolder}/bin/x64/main",
            "args": [
                "--file", "data/a280.tsp",
                "--mode", "nn",

                "--grasp", "random(0.01)",
                "--2opt",
                "--tlim", "5",

                //"--nnOpt", "random",
                //"--emOpt", "random",
                //"--vnsOpt", "nn",

                "--seed", "2023",
                //"--threads", "1",
                //"--roundcosts",
                "--plot", 
                //"--save",
                "--loglvl", "log"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}
